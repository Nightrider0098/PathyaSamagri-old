    <div class="main">
        <section class="sign-in">
            <div class="container">
                <form method="post" class="register-form" id="login-form" action="/mysql/book_update" enctype="multipart/form-data">

                    <div class="signin-content">


                        <div class="signin-image">
                            <figure>
                                <input type="file"  name="book_image" id="img_id"
                                    value="<%= img_id %>" onchange="readURL(this);"
                                    style="margin: auto;margin-bottom: 5px;" />
                                <img id="book_image" src="images/books/<%= img_id%>" alt="your image"
                                    style="width:180px;height:270px;" />
                            </figure>
                        </div>

              

                        <div class="signin-form">
                            <h2 class="form-title">Book UPDATE</h2>

                            <div class="form-group">
                                <label for="book_id"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input type="text" readonly required="required" name="book_id" id="book_id"
                                    placeholder="Book Title" value=<%= Book_id %> />
                            </div>

                            <div class="form-group">
                                <label for="book_title"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input type="text" required="required" name="title" id="book_title"
                                    placeholder="Book Title" value="<%= title%>" />
                            </div>
                            <div class="form-group">
                                <label for="author"><i class="zmdi zmdi-lock"></i></label>
                                <input type="text" name="author" required="required" id="book-author"
                                    placeholder="Author" value="<%=author%>" />
                            </div>

                            <div class="form-group">
                                <label for="Publisher"><i class="zmdi zmdi-lock"></i></label>
                                <input type="text" name="publisher" id="book-publisher" placeholder="Publisher"
                                    value="<%=publisher%>" />
                            </div>

                            <div class="form-group">
                                <label for="edition"><i class="zmdi zmdi-lock"></i></label>
                                <input type="number" name="edition" min="1" max="15" id="book-edition" placeholder="Edition"
                                    value="<%= edition %>" />
                            </div>

                            <div class="form-group">
                                <label for="book_pri"><i class="zmdi zmdi-lock"></i></label>
                                <input type="number" name="book_pr" id="book-edition" placeholder="Price"
                                    value="<%= book_pr %>" />
                            </div>
                            <div class="form-group">
                                <label for="year"><i class="zmdi zmdi-lock"></i></label>
                                <input type="text" list="year_list" name="for_year" id="book-ref-year" placeholder="For year"
                                    value="<%=for_year%>" />
                                    <datalist id="year_list">
                                        <option value="First"></option>
                                            
                                        <option value="Second"></option>
                                        <option value="Third"></option>
                                        <option value="Forth"></option>
                                        <option value="Fifth"></option>
                                        <option value="Masters"></option>
                                        <option value="PHD"></option>
                                        <option value="All"></option>
                                    
                                        </datalist>                         </div>

                            <div class="form-group">
                                <label for="subject"><i class="zmdi zmdi-lock"></i></label>
                                <input name="subject" list="subjects" id="book-subject" placeholder="Subject"
                                    value="<%= subject %>" />


                                <datalist id="subjects">

                                </datalist>


                            </div>
                            
                            <div class="form-group">
                                <label for="available_now"><i class="zmdi zmdi-lock"></i></label>
                                <input type="number" name="available_now" id="available_now" placeholder="availability"
                                    value="<%= available_now %>" />
                            </div>

                            <div class="form-group form-button">
                                <input type="submit" name="signin" id="signin" class="form-submit" value="UPDATE" />
                            </div>

                </form>


            </div>
    </div>
    </div>
    </section>
    </div>




</body>
<script>
    function readURL(input) {
      if (input.files && input.files[0]) {
        var reader = new FileReader();
  
        reader.onload = function (e) {
          $('#book_image')
            .attr('src', e.target.result)
            .width(180)
            .height(270);
        };
  
        reader.readAsDataURL(input.files[0]);
      }
    }
  </script>
  

